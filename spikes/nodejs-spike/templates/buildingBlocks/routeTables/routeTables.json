{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbRouteTable"
      }
    },
    "routeTables": {
      "type": "array"
    },
    "subnets": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "workaround": {
       "true": "[parameters('subnets')]",
       "false": [{
           "name": "workaround",
           "properties": {}
       }]
     },
     "sn": "[variables('workaround')[string(greater(length(parameters('subnets')), 0))]]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/routeTables",
      "apiVersion": "2016-06-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('routeTables')[copyIndex()].name]",
      "copy": {
        "name": "routeTables",
        "count": "[length(parameters('routeTables'))]"
      },
      "properties": "[parameters('routeTables')[copyIndex()].properties]",
      "tags": "[parameters('routeTables')[copyIndex()].tags]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('sn-', copyIndex())]",
      "condition": "[greater(length(parameters('subnets')), 0)]",
      "dependsOn": [
        "routeTables"
      ],
      "copy": {
         "name": "subnets",
         "count": "[length(variables('sn'))]",
         "mode": "Serial"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
          },
          "variables": {
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2016-06-01",
              "location": "[resourceGroup().location]",
              "name": "[concat(split(variables('sn')[copyIndex()].id, '/')[8], '/', split(variables('sn')[copyIndex()].id, '/')[10])]",
              "properties": "[union(reference(variables('sn')[copyIndex()].id, '2016-06-01'), variables('sn')[copyIndex()].properties)]"
            }
          ],
          "outputs": {
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
